<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="bolitas-div">
    <%= link_to image_tag("creacion.png", alt: "creacion logo"),"#", id: "imagen-creacion", class: "bolitas" %>
    <%= link_to image_tag("comunidad.png", alt: "comunidad logo"),'#', id: "imagen-comunidad", class: "bolitas" %>
    <%= link_to image_tag("misEjercicios.png", alt: "ejercios logo"),'#', id: "imagen-mis-ejercicios", class: "bolitas" %>
  </div>
</div>
