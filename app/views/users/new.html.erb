<% provide(:title, 'Sign up') %>
<%@stats =["student","teacher"]%>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <!-- label se usa para el texto que acompaÃ±a dropdown -->
      <%= f.label :status, "Rol" %>
      <!-- menu dropdown, donde el parametro seleccionado se llama ':status' y dentro esta el hash "flight_origin"-->
      <!-- se muestran cada uno de los elemetnos del Array stats, hay espacio vacio y la clase le da estilo -->
      <%= f.select(:status, @stats, {include_blank: ''}, { :class => 'form-control' }) %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>


    <% end %>
  </div>
</div>
