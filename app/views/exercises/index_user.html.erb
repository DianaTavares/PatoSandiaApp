<div class="center jumbotron comunidad">
  <h1>Mis Ejercicios</h1>
  <h3>Aquí estan todos tus ejercicios creados en SiTREC</h3>
</div>

<table class="table">
    <thead>
      <tr>
        <th>Nombre del Ejercicio</th>
        <th>Veces que ha sido resuelto</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <%@exercises.reverse.each do |exercise|%>
        <tr>
          <td><%= link_to exercise.name, show_exercise_path(exercise.id), remote: true %></td>
        <td><%= link_to UserExercise.where(exercise_id: exercise.id).count, users_exercise_list_path(exercise.id), remote: true %></td>
        <td>
          <%= link_to exercises_edit_path(exercise.id) do %>
            <button id="btn_edit" type="button" class="btn btn-success">
              <span class="glyphicon glyphicon-pencil"></span>
            </button>
          <% end %>
          <%= link_to exercises_delete_path(exercise.id), class: "btn btn-danger", data: { confirm: "¿Seguro que deseas eliminar el ejercicio?" } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div id="exercise-modal" class="modal fade"></div>
<br>
<br>
<%= link_to "<-- Regresar a herramientas", current_user %>
